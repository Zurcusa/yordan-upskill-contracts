# Optional: Etherscan/Blockscout API key for contract verification
ETHERSCAN_API_KEY="YOUR_ETHERSCAN_KEY"

# ------------------------------------------------------------
# ZurcusNFT deployment parameters
# ------------------------------------------------------------

NFT_NAME="Zurcus Collectible"
NFT_SYMBOL="ZURC"
NFT_BASE_URI="ipfs://Qm.../"
NFT_INITIAL_PRICE="10000000000000000"   # 0.01 ETH in wei
